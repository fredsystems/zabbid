{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "a11y": {
        "noAutofocus": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/@girs",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/target"
    ]
  }
}
